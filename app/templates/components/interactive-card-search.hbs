<div class="coffee-card">
  <div class="card-content columns">
    <div class="column is-2">
      <div class="card-square"></div>
    </div>
    <div class="search-input-wrapper column is-8">
      <div class="inputs">
        <Input @id="first-four" @placeholder="XXXX" @maxlength="4" @value={{this.firstFour}} {{on 'change' (fn this.registerValue)}}/>
        <div class="card-dash">-</div>
        <Input @id="mid-three" @placeholder="XXXX" @maxlength="4" @value={{this.midFour}} {{on 'change' (fn this.registerValue)}}/>
        <div class="card-dash">-</div>
        <Input @id="last-four" @placeholder="XXXX" @maxlength="4" @value={{this.lastFour}} {{on 'change' (fn this.registerValue)}}/>
      </div>
    </div>
    <div class="column is-2"></div>
  </div>
  <div class="card-info columns">
    <div class="column is-8">
      <h3>{{this.holderName}}</h3>
      <h4>{{this.holderStatus}}</h4>
      <h4>${{this.holderBalance}}</h4>
    </div>
    <div class="column is-4"></div>
  </div>
</div>

{{yield}}

